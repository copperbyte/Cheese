--Super Simple Test Six


function while_loop()
  i = 1
  while i <= 10 do
    print(i)
    i = i + 1
  end
end

----

function repeat_loop()
  i = 10
  repeat
    print(i)
    i = i - 1
  until i == 0
end

----

function for_num_loop()
  for i = 1, 100, 8 do
    print(i)
  end  
end

----

function for_num_loop_nest()
  local j = 5;
  for i = 1, 3 do
    for j = 1, i do
      print(j);
    end
  end
  print(i,j);
end

----
function for_iter_loop()
  tbl = {"a", "b", "c"}
  for key, value in ipairs(tbl) do
    print(key, value)
  end
end

----



while_loop();
repeat_loop();
for_num_loop();
for_num_loop_nest();
for_iter_loop();
